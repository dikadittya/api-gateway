{
  "$schema": "https://www.krakend.io/schema/v2.7/krakend.json",
  "version": 3,
  "name": "Wedding API Gateway",
  "timeout": "30s",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "host": ["http://0.0.0.0:8080"],
  "extra_config": {
    "router": {
      "return_error_msg": true
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allow_headers": [
        "Origin",
        "Content-Type",
        "Authorization",
        "Accept",
        "X-Requested-With"
      ],
      "expose_headers": ["Content-Length"],
      "max_age": "12h",
      "allow_credentials": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/health",
      "method": "GET",
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "method": "GET",
          "host": ["http://api-gateway:8080"]
        }
      ]
    },
    {
      "endpoint": "/auth/register",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/register",
          "encoding": "json",
          "method": "POST",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/login",
          "encoding": "json",
          "method": "POST",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/logout",
      "method": "POST",
      "input_headers": ["Authorization"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/logout",
          "encoding": "json",
          "method": "POST",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/me",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/me",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/user",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/user",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/users",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/users/{id}",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users/{id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/users",
      "method": "POST",
      "input_headers": ["Authorization"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users",
          "encoding": "json",
          "method": "POST",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/users/{id}",
      "method": "PUT",
      "input_headers": ["Authorization"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users/{id}",
          "encoding": "json",
          "method": "PUT",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/users/{id}",
      "method": "DELETE",
      "input_headers": ["Authorization"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/users/{id}",
          "encoding": "json",
          "method": "DELETE",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/roles",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/roles",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/auth/permissions",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/permissions",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/contohpost",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/contohpost",
          "encoding": "json",
          "method": "POST",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/members",
      "method": "GET",
      "cache_ttl": "0s",
      "timeout": "10s",
      "input_headers": ["*"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/members",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-auth"]
        }
      ]
    },
    {
      "endpoint": "/list-property",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/list-property",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-generic"]
        }
      ]
    },
    {
      "endpoint": "/data-busana",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/data-busana",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-generic"]
        }
      ]
    },
    {
      "endpoint": "/transaction/{resource}",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/{resource}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-transaction"]
        }
      ]
    },
    {
      "endpoint": "/transaction/{resource}/{id}",
      "method": "GET",
      "input_headers": ["Authorization"],
      "input_query_strings": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/{resource}/{id}",
          "encoding": "json",
          "method": "GET",
          "host": ["http://nginx-transaction"]
        }
      ]
    },
    {
      "endpoint": "/transaction/{resource}",
      "method": "POST",
      "input_headers": ["Authorization"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/{resource}",
          "encoding": "json",
          "method": "POST",
          "host": ["http://nginx-transaction"]
        }
      ]
    },
    {
      "endpoint": "/transaction/{resource}/{id}",
      "method": "PUT",
      "input_headers": ["Authorization"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/{resource}/{id}",
          "encoding": "json",
          "method": "PUT",
          "host": ["http://nginx-transaction"]
        }
      ]
    },
    {
      "endpoint": "/transaction/{resource}/{id}",
      "method": "DELETE",
      "input_headers": ["Authorization"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/{resource}/{id}",
          "encoding": "json",
          "method": "DELETE",
          "host": ["http://nginx-transaction"]
        }
      ]
    }
  ]
}
