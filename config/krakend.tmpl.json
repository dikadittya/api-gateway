{
  "$schema": "https://www.krakend.io/schema/v2.7/krakend.json",
  "version": 3,
  "name": "Wedding API Gateway",
  "timeout": "30s",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "host": ["http://0.0.0.0:8080"],
  "extra_config": {
    "router": {
      "return_error_msg": true
    },
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "security/cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allow_headers": [
        "Origin",
        "Content-Type",
        "Authorization",
        "Accept",
        "X-Requested-With"
      ],
      "expose_headers": ["Content-Length"],
      "max_age": "12h",
      "allow_credentials": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/health",
      "method": "GET",
      "input_query_strings": ["*"],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "method": "GET",
          "host": ["{{ .hosts.gateway }}"]
        }
      ]
    }
  ]
}
